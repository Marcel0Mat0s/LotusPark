@model LotusPark.Models.Vagas

@{
    ViewData["Title"] = "Nova Vaga";
}

<h1>Nova Vaga</h1>

<h4>Vagas</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Numero" class="control-label"></label>
                <input asp-for="Numero" class="form-control" />
                <span asp-validation-for="Numero" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Estado" class="control-label"></label>
                <select asp-for="EstadoFK" class ="form-control" asp-items="ViewBag.EstadoFK"></select>
            </div>
            <div class="form-group">
                <label asp-for="Reserva" class="control-label"></label>
                <select asp-for="ReservaFK" class ="form-control" asp-items="ViewBag.ReservaFK"></select>
            </div>
            </br>
            <div class="form-group">
                <input type="submit" value="Criar" class="btn btn-primary" />
            </div>
            </br>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Voltar à Lista</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
